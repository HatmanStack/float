{
  "name": "float",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "cd frontend && expo start",
    "android": "cd frontend && expo run:android",
    "ios": "cd frontend && expo run:ios",
    "web": "cd frontend && expo start --web",
    "test": "jest --passWithNoTests --ci --runInBand --forceExit",
    "test:backend": "PYTHONPATH=backend pytest tests/backend backend/tests -v --tb=short",
    "lint": "cd frontend && npx eslint . --ext .ts,.tsx && npx tsc --noEmit",
    "lint:backend": "cd backend && uvx ruff check .",
    "check": "npm run lint && npm run lint:backend && jest --passWithNoTests --no-watch --ci --runInBand --forceExit && npm run test:backend",
    "deploy": "bash ./infrastructure/scripts/deploy-production.sh"
  },
  "jest": {
    "preset": "jest-expo",
    "rootDir": ".",
    "roots": [
      "<rootDir>/tests/frontend",
      "<rootDir>/frontend"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/frontend/unit/utils/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/frontend/unit/utils/",
      "/tests/frontend/integration/setup.ts",
      "/tests/frontend/integration/test-utils.tsx"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/frontend/$1"
    }
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-google-signin/google-signin": "^14.0.1",
    "@react-navigation/native": "^6.0.2",
    "@react-oauth/google": "^0.12.2",
    "@testing-library/react-native": "^13.2.0",
    "axios": "^1.9.0",
    "expo": "~52.0.40",
    "expo-av": "^15.1.4",
    "expo-file-system": "^17.0.1",
    "expo-font": "~12.0.9",
    "expo-linking": "~6.3.1",
    "expo-notifications": "^0.31.2",
    "expo-permissions": "^14.4.0",
    "expo-router": "~3.5.21",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-web-browser": "^14.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/detox": "^20.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "aws-sdk": "^2.1692.0",
    "detox": "^20.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.2.1",
    "jest-expo": "^52.0.6",
    "prettier": "^3.6.2",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
