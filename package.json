{
  "name": "float-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "start": "cd frontend && npm start",
    "android": "cd frontend && npm run android",
    "ios": "cd frontend && npm run ios",
    "web": "cd frontend && npm run web",
    "test": "jest --passWithNoTests --ci --runInBand --forceExit",
    "test:backend": "cd backend && PYTHONPATH=. pytest tests/unit -v --tb=short",
    "lint": "cd frontend && npm run lint",
    "lint:backend": "cd backend && uvx ruff check .",
    "check": "npm run lint && npm run lint:backend && npm test",
    "deploy": "node ./backend/scripts/deploy.mjs"
  },
  "jest": {
    "preset": "jest-expo",
    "rootDir": ".",
    "roots": [
      "<rootDir>/tests/frontend",
      "<rootDir>/frontend"
    ],
    "testMatch": [
      "**/*-test.tsx",
      "**/*-test.ts"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/frontend/unit/utils/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/frontend/unit/utils/",
      "/tests/frontend/integration/setup.ts",
      "/tests/frontend/integration/test-utils.tsx"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/frontend/$1"
    }
  },
  "devDependencies": {
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.12",
    "@types/react-test-renderer": "^18.0.7",
    "aws-sdk": "^2.1692.0",
    "detox": "^20.0.0",
    "jest": "^29.2.1",
    "jest-expo": "^52.0.6",
    "prettier": "^3.6.2",
    "react-test-renderer": "18.2.0"
  }
}
